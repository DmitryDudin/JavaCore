@FunctionalInterface
    public interface ThrowingConsumer<T> extends Consumer<T> {

        default void accept(final T t) {
            try {
                acceptThrows(t);
            } catch (Exception e) {
                throw new RuntimeException(e);
            }
        }

        void acceptThrows(T elem) throws Exception;

